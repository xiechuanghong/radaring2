/* pages/editimages/editimages.wxss */

page {
  width: 100%;
  box-sizing: border-box;
}

.detail {
  padding: 56rpx;
  margin-bottom: 40px;
}

.item {
  width: 100%;
  height: 360rpx;
  position: relative;
  margin-bottom: 48rpx;
}

.item .img {
  width: 100%;
  height: 100%;
}

.item .del {
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  right: -24rpx;
  top: -24rpx;
}

.swiper-images {
  height: 360rpx;
  background: #f2f2f2;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.swiper-images image {
  width: 130rpx;
  height: 136rpx;
}

images {
  width: 100%;
  height: 360rpx;
}

.success {
  position: fixed;
  bottom: 16rpx;
  width: 100%;
  z-index: 100;
}

.success.active {
  opacity: 0.4;
}

.success .text {
  padding: 14rpx 0;
  margin: 0 40rpx;
  color: #fff;
  font-size: 18px;
  text-align: center;
  background: #0084ff;
  border-radius: 47rpx;
}