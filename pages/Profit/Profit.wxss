/* pages/Profit/Profit.wxss */

page {
  position: relative;
  height: 100%;
  width: 100%;
  background: #f2f2f2;
}

.my-code {
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  background: #fff;
  border-bottom: 1px solid rgba(0,0,0,0.06);
}

.code-text {
  display: flex;
  align-items: center;
}

.my-code image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.code-col {
  color: #0084FF;
}

.showinfo-button {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 112rpx;
  height: 64rpx;
  border: solid #0084ff 2rpx;
  border-radius: 8rpx;
}

.showinfo-button-text {
  color: #0084ff;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
}

.profit-top {
  overflow: hidden;
  padding: 40rpx;
  background: #fff;
  position: relative;
  z-index: 1;
  height: 356rpx;
  box-sizing: border-box;
}

.profit-top .profit-sum {
  font-family: PingFangSC-Medium;
  font-size: 32px;
  color: #f8464a;
  text-align: center;
}

.profit-top .profit-sum-text {
  font-size: 14px;
  color: #8b9199;
  text-align: center;
}

.profit-top .profit-now {
  display: flex;
  align-items: center;
  margin-top: 54rpx;
  justify-content: space-between;
}

.profit-top .profit-now .line {
  height: 100rpx;
  width: 2rpx;
  background: rgba(0, 0, 0, 0.06);
}

.profit-top .profit-now .profit-ele {
  display: flex;
  flex-direction: column;
  text-align: center;
}

.profit-top .profit-ele .profit-ele-num {
  font-family: PingFangSC-Medium;
  margin-bottom: 8rpx;
  font-size: 18px;
  color: #000;
}

.profit-top .profit-ele .profit-ele-text {
  font-size: 14px;
  color: #8b9199;
}

.profit-top .profit-take {
  position: absolute;
  padding: 4rpx 32rpx;
  border: 2rpx solid #208aff;
  border-radius: 24rpx;
  font-size: 14px;
  color: #007aff;
  top: 70rpx;
  right: 100rpx;
}

.profit-button {
  padding: 48rpx 64rpx;
  background: #fff;
  margin-top: 16rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.profit-button .profit-intr image {
  width: 100%;
}

.profit-button .profit-type {
  display: flex;
  justify-content: space-around;
}

.profit-button .profit-type image {
  width: 128rpx;
}

/* ---------------------不是vip样式---------------- */

.mobel {
  position: absolute;
  width: 100%;
  height: 356rpx;
  top: 0;
  background: rgba(0, 0, 0, 0.60);
  text-align: center;
  line-height: 356rpx;
  /* display: flex;
  justify-content: center;
  align-items: center; */
  color: #fff;
  z-index: 3;
  display:none;
}

.auto {
  display: flex;
  justify-content: center;
  align-items: center;
}

.become-vip {
  width: 640rpx;
  height: 90rpx;
  margin: 48rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 48rpx;
  font-family: PingFangSC-Medium;
  font-size: 18px;
  color: #9f1e1e;
  background-image: linear-gradient(-180deg, #fad961 0%, #ffb829 100%);
}
