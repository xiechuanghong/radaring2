.tab-content {
  margin-top: 16rpx;
}

.tab-content .item {
  background: #fff;
  padding: 32rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.06);
}

.tab-content .item .left {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.tab-content .item .right {
  flex: 1;
  margin-left: 16rpx;
}

.tab-content .right-box {
  display: flex;
  font-size: 14px;
  align-items: center;
  justify-content: space-between;
}

.tab-content .right-box .name {
  color: #0084ff;
}

.tab-content .right-box .VIP {
  color: #060f38;
}

.tab-content .right-box .time {
  font-size: 12px;
  color: #8b9199;
}

.tab-content .right-box .col-true {
  font-size: 18px;
  color: #6db33b;
  font-family: PingFangSC-Medium;
}

.tab-content .right-box .col-false {
  font-size: 18px;
  color: #ff681b;
  font-family: PingFangSC-Medium;
}

.tab-content .right-box .process-state {
  font-size: 12px;
  color: #8b9199;
}
